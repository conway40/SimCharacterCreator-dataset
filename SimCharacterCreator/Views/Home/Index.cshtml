@{
    ViewBag.Title = "Home Page";
}

    <div class="jumbotron">
        <h1>Sim Character Creator</h1>
        <p class="lead">Sim Character Creator is a free web app for building amazing sims and viewing sims from other creators.</p>
        <p>View sims from other creators or start creating sims now!</p>
        <p>@Html.ActionLink("Create Sims", "Create", "Sim", null, new { @class = "btn btn-default" }) &nbsp;
        @Html.ActionLink("Explore Sims", "Index", "Sim", null, new { @class = "btn btn-default" })</p>
    </div>

    <div class="row">
        <h2>Play with life</h2>
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="item active">
                    <img src="~/DataAccessLayer/Images/ThePancakeFamily.jpg" alt="Pancake" style="width:100%;">
                </div>

                <div class="item">
                    <img src="~/DataAccessLayer/Images/ThePleasantFamily.jpg" alt="Pleasant" style="width:100%;">
                </div>

                <div class="item">
                    <img src="~/DataAccessLayer/Images/TheGothFamily.jpg" alt="Pancake" style="width:100%;">
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>

<div class="row">
    <div class="col-md-4">
        <h2>Create your own custom sim!</h2>
        <p>
            Sim Character Creator gives you a powerful way to create customized sims that
            spices up your gameplay and gives you full control over character creation.
        </p>
        <p>@Html.ActionLink("Create Sims", "Create", "Sim", null, new { @class = "btn btn-default" })</p>
    </div>
    <div class="col-md-4">
        <h2>Need Inspiration?</h2>
        <h3>Explore our database of characters from other creators!</h3>
        <p>You can easily find a sim that offers the right mix of features and traits for your gaming experience.</p>
        <p>@Html.ActionLink("Explore Sims", "Index", "Sim", null, new { @class = "btn btn-default"})</p>
    </div>
    <div class="col-md-4">
        <h2>About</h2>
        <p>Learn more about this app and the story behind it!</p>
        <p>@Html.ActionLink("About Us", "About", "Home", null, new { @class = "btn btn-default" })</p>
    </div>
</div>